<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.parcial2.controller.DashboardController"
            prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@../Style.css">

    <VBox spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="Property Management System" styleClass="page-title"/>
        </HBox>

        <!-- Navigation Buttons -->
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Button fx:id="btnShowForm" text="Add Property" styleClass="btn-primary"
                    onAction="#showFormView" prefWidth="200.0"/>
            <Button fx:id="btnShowList" text="View Properties" styleClass="btn-primary"
                    onAction="#showListView" prefWidth="200.0"/>
        </HBox>

        <!-- Content Area - Dynamic View -->
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS">
            <!-- Views will be loaded here dynamically -->
        </StackPane>
    </VBox>
</AnchorPane>