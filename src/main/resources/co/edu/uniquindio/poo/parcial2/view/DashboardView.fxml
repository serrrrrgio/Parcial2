<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.parcial2.controller.DashboardController"
            prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@../Style.css">

    <VBox spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="Property Management System" styleClass="page-title"/>
        </HBox>

        <!-- Statistics Card -->
        <HBox spacing="20.0" alignment="CENTER_LEFT">
            <VBox styleClass="stat-card" spacing="10.0">
                <padding>
                    <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
                </padding>
                <Label text="Total Properties" styleClass="stat-label"/>
                <Label fx:id="lblTotalProperties" text="0" styleClass="stat-value"/>
            </VBox>
        </HBox>

        <!-- Main Content - Split View -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- Left Side - Form -->
            <VBox spacing="15.0" styleClass="content-card" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                <fx:include fx:id="propertyForm" source="PropertyFormView.fxml"/>
            </VBox>

            <!-- Right Side - List -->
            <VBox spacing="15.0" styleClass="content-card" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                <fx:include fx:id="propertyList" source="PropertyListView.fxml"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
